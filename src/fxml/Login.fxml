<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="fxml.LoginControlador" styleClass="login" hgap="15"
	vgap="15">

	<padding>
		<Insets left="40" right="40" top="40" />
	</padding>

	<columnConstraints>
		<ColumnConstraints minWidth="50" prefWidth="50"
			halignment="RIGHT" />
		<ColumnConstraints prefWidth="200"
			maxWidth="Infinity" hgrow="ALWAYS" />
	</columnConstraints>

	<Label text="Seja Bem Vindo" GridPane.columnIndex="0"
		GridPane.RowIndex="0" styleClass="login-titulo"
		GridPane.columnSpan="2" GridPane.halignment="CENTER">

		<GridPane.margin>
			<Insets top="20" bottom="20" />
		</GridPane.margin>
	</Label>

	<Label text="E-mail:" GridPane.columnIndex="0"
		GridPane.RowIndex="1" styleClass="login-form-label"></Label>
	<TextField fx:id="campoEmail" GridPane.columnIndex="1"
		GridPane.RowIndex="1"></TextField>

	<Label text="Senha:" GridPane.columnIndex="0"
		GridPane.RowIndex="2" styleClass="login-form-label"></Label>
	<PasswordField fx:id="campoSenha"
		GridPane.columnIndex="1" GridPane.RowIndex="2"></PasswordField>

	<Button text="Entrar" GridPane.columnIndex="0"
		GridPane.RowIndex="3" onAction="#entrar" styleClass="login-form-botao"
		GridPane.columnSpan="2" GridPane.halignment="CENTER">
		<GridPane.margin>
			<Insets top="20" bottom="20" />
		</GridPane.margin>
	</Button>

</GridPane>

